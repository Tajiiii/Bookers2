<body>

<div class="body">
  <div class="container">
    <p id="notice"></p>
      <div class="row">
  
        <div class="col-xs-3">
          <h2>User info</h2>

          <table class="table">
            <tbody>
              <tr><%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></tr> 

              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <%= link_to edit_user_path(current_user) do %><i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></i><% end %>
          </div>

          <h2>New book</h2>
            <%= form_for(@book) do |f| %>
            <div class="field row">
              <label class="book_title">Title</label>
              <%= f.text_field :title, class: "col-xs-12" %>
            </div>

            <div class="field row">
              <label class="book_opinion">Opinion</label>
              <%= f.text_area :body, class: "col-xs-12" %>
            </div>
            <br>

            <div class="actions row">
              <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
            </div>
          <% end %>
        </div>

        <div class="col-xs-9">
          <h2>Users</h2>

          <table class="table">
              <thead>
                <tr> 
                  <th>image</th>
                  <th>name</th>
                  <th></th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= attachment_image_tag user, :profile_image, size: '40x40', fallback: "no_image.jpg" %></td>
                    <td><%= user.name %></td>
                    <td><%= link_to 'Show', user_path(user.id), class:"edit_#{user.id}" %></td>
                    <td>フォロー数：<%= user.follower.count %></td>
                    <td>フォロワー数：<%= user.followed.count %></td>
                    <td>
                      <% if current_user != user %>
                        <% if current_user.following?(user) %>
                          <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %>
                        <% else %>
                          <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>

</body>