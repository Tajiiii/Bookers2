<body>
  <div class="container">
    <p id="notice"></p>
    <h2>User info</h2>
    <% if @user.errors.any? %>
      <div id="error_explanation" style="color: red;">
          <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
      <%= form_for(@user) do |f| %>
        <div class="field">
          <label for="user_name">Name</label>
          <%= f.text_field :name %>
        </div><br>

        <div class="field">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, class: "user_edit_form" %>
          <br>
        </div>

        <div class="field">
          <label for="user_introduction">Introduction</label>
              <%= f.text_area :introduction %>
              <br>
        </div>

        <div class="actions">
          <%= f.submit "Update User" %>
        </div>
      <% end %>

  </div>
</body>