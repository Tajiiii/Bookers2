<div class="body">
  <div class="container">
    <p id="notice"></p>
      <div class="row">
  
        <div class="col-xs-3">
          <h2>User info</h2>
          <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image">

          <table class="table">
            <tbody>
              <tr></tr> 

              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_22936" href="/users/22936/edit"></a>
          </div>

          <h2>New book</h2>
            <%= form_for(@book) do |f| %>
              <div class="field row">
                <label for="book_title">Title</label>
                <input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title">
              </div>

              <div class="field row">
                <label for="book_opinion">Opinion</label>
                <textarea class="col-xs-12 book_body" name="book[body]" id="book_body"></textarea>
              </div>

              <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
            <% end %>

        </div>

        <div class="col-xs-9">
          <h2>Books</h2>

          <table class="table">
              <thead>
                <tr> 
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td></td>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

</body>